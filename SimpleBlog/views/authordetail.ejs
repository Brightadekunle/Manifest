<div class="content-section">
    <div class="media">
      <% let baseUrl = "https://brightadekunleblog.herokuapp.com/" %>
      <% let image =  baseUrl + author.profilePicture %>
      <img class="rounded-circle account-img" src="<%= image %>" style="object-fit: cover;">
      <div class="media-body">
        <h2 class="account-heading"><%= author.username %></h2>
        <p class="text-secondary"><%= author.email %></p>
        <a class="btn btn-primary" href="/blog/post/create">Create Post</a>  
        <a class="btn btn-secondary" href="/blog/author/update/<%= author.id %>">Update</a>  
      </div>
    </div>
  </div>

  
  <h4>Posts by <%= author.username %></h4>
  <% posts.forEach(post => { %>
    <article class="media content-section">
      <% let image =  baseUrl + author.profilePicture %>
      <img class="rounded-circle account-img" src="<%= image %>" style="object-fit: cover;">
      <div class="media-body">
        <div class="article-metadata">
          <a class="mr-2" href="/blog/author/<%= author.id %>"><%=  %></a>
          <small class="text-muted"><%= post.createdAt %></small>
        </div>
        <h2><a class="article-title" href="/blog/post/<%= post.id %>"><%= post.post_title %></a></h2>
        <p class="article-content"><%= post.post_body %></p>
      </div>
    </article>
<% }) %>
