<div class="content-section">
      <form method="POST" action="/blog/author/update/<%= author.id %>" enctype="multipart/form-data">
          <fieldset class="form-group">
              <legend class="border-bottom mb-4">Profile Info</legend>
              <div class="form-group">
                <h5>Username</h5>
                <input type="text" name="username" class="form-control" value="<%= author.username %>">
            </div>
              <div class="form-group">
                <h5>Email</h5>
                <input type="email" name="email" class="form-control" value="<%= author.email %>">
            </div>
              <div class="form-group">
                <h5>Profile picture</h5>
                <input type="file" name="profilePicture" class="form-control-file">
              </div>
          </fieldset>
          <div class="form-group">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
      </form>
</div>