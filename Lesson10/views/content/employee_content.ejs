<% } else if (title == 'Employee Details') { %>
    <div class="col-sm-8">    
        <div class="">
             <h1>Details of a Single employee - <%= employee.first_name %> <%= employee.lastName %> </h1>
             <p>I am an employee for this ID = <%= employee.id %></p>
             <p>Employee First Name: <%= employee.firstName %></p>
             <p>Employee Last Name:  <%= employee.lastName %></p>
             <p>Employee Email Address:  <%= employee.email %></p>
             <p>Employee Years of experience:  <%= employee.yearsOfExperience %></p>
